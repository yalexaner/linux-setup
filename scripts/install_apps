#!/bin/bash

# Yandex.Disk
echo "Yandex.Disk"

wget -qO - https://repo.yandex.ru/yandex-disk/YANDEX-DISK-KEY.GPG | sudo apt-key add -
echo "deb https://repo.yandex.ru/yandex-disk/deb/ stable main" | sudo tee /etc/apt/sources.list.d/yandex-disk.list
sudo apt-get update
sudo apt-get install yandex-disk

clear

# Yandex.Browser
echo "Yandex.Browser"

wget -qO - https://repo.yandex.ru/yandex-browser/YANDEX-BROWSER-KEY.GPG | sudo apt-key add -
echo "deb https://repo.yandex.ru/yandex-browser/deb/ beta main" | sudo tee /etc/apt/sources.list.d/yandex-browser.list
sudo apt-get update
sudo apt-get install yandex-browser-beta

clear

# Windscribe
echo "Windscribe. VPN for Linux"

sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-key FDC247B7
echo 'deb https://repo.windscribe.com/ubuntu zesty main' | sudo tee /etc/apt/sources.list.d/windscribe-repo.list
sudo apt-get update
sudo apt-get install windscribe-cli

clear

# LastPass
echo "LastPass"
sudo apt install lastpass-cli
clear

# Opera
echo "Opera"
sudo snap install opera
clear

# Telegram
echo "Telegram"
sudo snap install telegram-desktop
clear

# Deluge
echo "Deluge"
sudo apt-get install deluge
clear

# Sublime Text 3
echo "Sublime Text 3"
sudo snap install sublime-text --classic
clear

# Mailspring
echo "Mailspring"
sudo snap install mailspring
clear

# VS Code
echo "VS Code"
sudo snap install vscode
clear

# Git
echo "Git"
sudo apt-get install git
clear

# Python Pip
echo "Pip"
sudo apt-get install python3-pip
clear

# Vim
echo "Vim"
sudo apt-get install vim
clear

# Deezer
echo "Deezer"
wget -qO "mellow-player" "https://bintray.com/colinduquesnoy/MellowPlayer/download_file?file_path=stable%2F3.5.0%2FMellowPlayer-x86_64.AppImage"
clear

# Spotify
echo "Spotify"
sudo snap install spotify
clear

# Fast by Netflix
echo "Fast"
sudo snap install fast
clear

# matroska-tools (mkvtoolnix)
echo "mkvtoolnix"
sudo snap install matroska-tools
clear

# FFmpeg
echo "FFmpeg"
sudo snap install ffmpeg
clear

# Steam
echo "Steam"
wget -q https://steamcdn-a.akamaihd.net/client/installer/steam.deb
sudo dpkg -i steam.deg >progress.txt
clear

# Anki
echo "Anki"

tar -xjf ../apps/anki-2.0.50-amd64.tar.bz2
cd anki-2.0.50
sudo make install >progress.txt
cd ..
rm -rf anki-2.0.50

# mplayer (for Anki)
sudo apt-get install mplayer

clear

# Okular
echo "Okular"
sudo snap install okular
clear

# VLC
echo "VLC"
sudo snap install vlc
clear

# Eye of Gnome (eog)
echo "Eye of Gnome (eog)"
sudo snap install eog
clear

# MEGA Sync
echo "MEGA Sync"
sudo dpkg -i ../apps/megasync-xUbuntu_16.04_amd64.deb >progress.txt
clear
